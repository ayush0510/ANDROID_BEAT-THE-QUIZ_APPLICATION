<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
        >

    	<include layout="@layout/p_title_bar"/>
    
		<LinearLayout
		    android:paddingTop="5dp"
		    android:id="@+id/MPODGlayoutForIndicator" 
		    android:layout_below="@+id/TBtitleBar"
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
		</LinearLayout>
	  
       <RelativeLayout
	      android:id="@+id/MPODGgameModeStuff"
	      android:layout_height="fill_parent"
	      android:layout_width="match_parent"
	      android:layout_below="@+id/MPODGlayoutForIndicator"
	     >
	       <TextView
	           android:id="@+id/MPODGVtextView"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_centerHorizontal="true"
	      	   android:layout_centerVertical="true" 
	           android:textAppearance="?android:attr/textAppearanceLarge"
	           android:text="bla bla bla"
	           />
	       
	       
	       	<include layout="@layout/p_bottom_buttons"
	       	    android:id="@+id/MPODGVbootomButtons"
	       	    android:layout_alignParentBottom="true"
	       	  /> 
       	  
       </RelativeLayout>
        <RelativeLayout
	      android:id="@+id/MPODScoreModeStuff"
	      android:visibility="invisible"
	      android:layout_height="fill_parent"
	      android:layout_width="match_parent"
	      android:layout_below="@+id/MPODGlayoutForIndicator" >
	       <WebView
	           android:id="@+id/MPODGScoretextView"
	           android:gravity="center"
	           android:textAlignment="center"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_centerHorizontal="true"
	      	   android:layout_centerVertical="true" 
	           android:textAppearance="?android:attr/textAppearanceLarge"
	          
	           />
	       
	       
	       	<include layout="@layout/p_result_bottom_buttons"
	       	    android:id="@+id/MPODGVscoreButtons"
	       	    android:layout_alignParentBottom="true"
	       	  /> 
       	  
       </RelativeLayout>
       
   </RelativeLayout>
   
   
 
