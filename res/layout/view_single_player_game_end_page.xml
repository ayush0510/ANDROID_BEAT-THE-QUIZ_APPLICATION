<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 	<TextView
            android:id="@+id/LPtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textSize="30sp" 
            android:text="@string/current"/>
    
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" 
        android:layout_below="@+id/LPtitle1"
     	android:layout_marginLeft="30dp"
     	android:layout_marginTop="10dp"
        >
		
        <TextView
            android:id="@+id/LPtasks1"
            android:layout_alignParentLeft="true"
             android:layout_alignParentTop="true"
            android:layout_height="30sp"
            android:textSize="20sp"
            android:layout_width="105sp"
            
            android:text="@string/number_tasks_wc" />
 		 <TextView
            android:id="@+id/LPtasks2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/LPtasks1"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:text="20" />
 		 
      

        <TextView
            android:id="@+id/LPtime1"
            android:layout_alignParentLeft="true"
           	android:layout_below="@+id/LPtasks1"
           	android:layout_height="30sp"
            android:textSize="20sp"
            android:layout_width="105sp"
            android:text="@string/time_wc" />
       
        <TextView
            android:id="@+id/LPtime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           	android:layout_below="@+id/LPtasks1"
            android:layout_toRightOf="@+id/LPtime1"
            android:textSize="20sp"
            android:text="30" />
        
          <TextView
            android:id="@+id/LPscore1"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/LPtime1"
            android:layout_height="30sp"
            android:textSize="20sp"
            android:layout_width="105sp"
            android:text="@string/score_wc" />
          
         <TextView
            android:id="@+id/LPscore2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/LPscore1"
            android:layout_below="@+id/LPtime1"
            android:textSize="20sp"
            android:text="12" />

    </RelativeLayout>
     <View
         android:id="@+id/middleSepartator"
         android:layout_height="1px"
         android:layout_width="match_parent"
         android:layout_centerVertical="true"
         android:layout_alignParentLeft="true"
         />
<!--          android:layout_marginTop="-20dp" -->


	<TableLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/LPtitle2"
	    android:layout_marginLeft="20dp"
	    android:textAlignment="center" >

	    <TableRow
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >

	        <TextView
	            android:layout_width="50dp"
	            android:gravity="center_horizontal"
	            android:text="@string/number_tasks" />

	        <TextView
	            android:layout_width="50dp"
	            android:gravity="center_horizontal"
	            android:text="@string/time" />

	        <TextView
	            android:layout_width="50dp"
	            android:gravity="center_horizontal"
	            android:text="@string/score" />
	    </TableRow>

	    <TableRow
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >

	        <TextView
	            android:layout_width="0px"
	            android:gravity="center_horizontal"
	            android:text="10" />

	        <TextView
	            android:id="@+id/ESPtimeL"
	            android:layout_width="0px"
	            android:gravity="center_horizontal"
	            android:text="5.4" />

	        <TextView
	            android:id="@+id/ESPscoreL"
	            android:layout_width="0px"
	            android:gravity="center_horizontal"
	            android:text="10" />
	    </TableRow>

	    <TableRow
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >

	        <TextView
	            android:layout_width="0px"
	            android:gravity="center_horizontal"
	            android:text="20" />

	        <TextView
	            android:id="@+id/ESPtimeM"
	            android:layout_width="0px"
	            android:gravity="center_horizontal"
	            android:text="8.2" />

	        <TextView
	            android:id="@+id/ESPscoreM"
	            android:layout_width="0px"
	            android:gravity="center_horizontal"
	            android:text="17" />
	    </TableRow>

	    <TableRow
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >

	        <TextView
	            android:layout_width="0px"
	            android:gravity="center_horizontal"
	            android:text="30" />

	        <TextView
	            android:id="@+id/ESPtimeH"
	            android:layout_width="0px"
	            android:gravity="center_horizontal"
	            android:text="18.2" />

	        <TextView
	            android:id="@+id/ESPscoreH"
	            android:layout_width="0px"
	            android:gravity="center_horizontal"
	            android:text="28" />
	    </TableRow>
	</TableLayout>

	<TextView
	    android:id="@+id/LPtitle2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/relativeLayout1"
	    android:layout_marginTop="40dp"
	    android:text="@string/until_now"
	    android:textSize="30sp" />
	
	<include layout="@layout/p_result_bottom_buttons"/>

</RelativeLayout>