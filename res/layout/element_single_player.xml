<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >
       <RelativeLayout 
            android:layout_width="wrap_content"
    		android:layout_height="120dp"
    		android:layout_alignParentLeft="true"
		    android:background="@drawable/list_item_background"
    		
            >
            <TextView 
                android:id="@+id/ESPtitle"
                android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
                android:layout_centerVertical="true"
    			android:text="1. Stopnja"
    			android:textSize="30sp"
                />
            <TextView 
                 android:id="@+id/ESPdescription"
                 android:layout_width="wrap_content"
    	 		 android:layout_height="wrap_content"
                 android:layout_alignParentBottom="true"
                 android:text="Osnove seštevanje"
    	        />
        </RelativeLayout>
        
         <TableLayout 
            android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentRight="true"
    	    android:layout_centerVertical="true"
    	    android:textAlignment="center">
    	     <TableRow 
               android:layout_width="wrap_content"
    	   	   android:layout_height="wrap_content"
    	   	  
    	   	   >
                <TextView
                   android:layout_width="50dp"
                   android:gravity="center_horizontal"
		           android:text="@string/number_tasks"
		         />
                <TextView
                   android:layout_width="50dp"
                   android:gravity="center_horizontal"
		           android:text="@string/time"
		         />
                 <TextView
                   android:layout_width="50dp"
                   android:gravity="center_horizontal"
		           android:text="@string/score"
		         />
            </TableRow>
            <TableRow 
               android:layout_width="wrap_content"
    	   	   android:layout_height="wrap_content" >
                 <TextView
                   android:layout_width="0px"
                   android:gravity="center_horizontal"
		           android:text="10"
		         />
                <TextView
                   android:id="@+id/ESPtimeL"
		           android:layout_width="0px"
		           android:gravity="center_horizontal"
		           android:text="5.4"
		         />
                 <TextView
                   android:id="@+id/ESPscoreL"
                   android:layout_width="0px"
                   android:gravity="center_horizontal"
		           android:text="10"
		         />
            </TableRow>
            <TableRow 
               android:layout_width="wrap_content"
    	   	   android:layout_height="wrap_content">
                   <TextView
                   android:layout_width="0px"
                   android:gravity="center_horizontal"
		           android:text="20"
		         />
                <TextView
                   android:id="@+id/ESPtimeM"
                   android:layout_width="0px"
                   android:gravity="center_horizontal"
		           android:text="8.2"
		         />
                 <TextView
                   android:id="@+id/ESPscoreM"
                   android:layout_width="0px"
                   android:gravity="center_horizontal"
		           android:text="17"
		         />
            </TableRow>
            <TableRow 
               android:layout_width="wrap_content"
    	   	   android:layout_height="wrap_content">
                    <TextView
                   android:layout_width="0px"
                   android:gravity="center_horizontal"
		           android:text="30"
		         	/>
                <TextView
                   android:id="@+id/ESPtimeH"
                   android:layout_width="0px"
                   android:gravity="center_horizontal"
		           android:text="18.2"
		         />
                 <TextView
                   android:id="@+id/ESPscoreH"
                   android:layout_width="0px"
                   android:gravity="center_horizontal"
		           android:text="28"
		         />
            </TableRow>
        </TableLayout>
        
</RelativeLayout>
