<com.my.math_quiz.views.ResultBottomButtoms xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/BBResultBottomButtons"
    android:layout_height="50dp"
    android:layout_width="match_parent"
    android:weightSum="2"
    android:layout_alignParentBottom="true"
     >

    <Button 
           android:id="@+id/LPbuttonAgain"
           android:layout_height="match_parent"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:text="@string/again"
           android:gravity="center"
           android:background="@drawable/button_background_normal"
           />
      <Button 
           android:id="@+id/LPbuttonShare"
           android:layout_height="match_parent"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:text="@string/share"
           android:gravity="center"
           android:background="@drawable/button_background_normal"
           android:visibility="gone"
           />
       <Button 
           android:id="@+id/LPbuttonFinish"
           android:layout_height="match_parent"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:text="@string/end"
           android:gravity="center"
           android:background="@drawable/button_background_normal" 
           />
</com.my.math_quiz.views.ResultBottomButtoms>
