<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" 
    >
     <PreferenceCategory 
        android:key="pref_key_single_player_category"
        android:title="@string/seSinglePlayer">
            <ListPreference
            android:key="pref_key_delay_correct"
            android:title="@string/seDelayCorrect"
            android:summary="@string/seDelayCorrectInfo"
            android:defaultValue="0"
            android:entries="@array/deleyBeforeSwitch"
            android:entryValues="@array/deleyBeforeSwitchValues"
     	   />   
           <ListPreference
            android:key="pref_key_delay_wrong"
            android:title="@string/seDelayInCorrect"
            android:summary="@string/seDelayInCorrectInfo"
            android:defaultValue="500"
            android:entries="@array/deleyBeforeSwitch"
            android:entryValues="@array/deleyBeforeSwitchValues"
     	   />
            <ListPreference
            android:key="pref_key_number_of_test"
            android:title="@string/seNumberOfTests"
            android:defaultValue="10"
            android:summary="@string/seNicknameInfo"
            android:entries="@array/numberOfGamesInRound"
            android:entryValues="@array/numberOfGamesInRoundValue"
            
     	   />
    </PreferenceCategory>
    <PreferenceCategory 
        android:key="pref_key_multi_player_category"
        android:title="@string/seMultiPlayer">
        
        <EditTextPreference
            android:key="pref_key_mp_nickname"
            android:title="@string/seNickname"
            android:summary="@string/seNicknameInfo"
            android:dialogTitle="@string/seNickname"
            android:dialogMessage="@string/seNicknameChose"   
            android:defaultValue="@string/seNicknameDefault" />
     	 <ListPreference
            android:key="pref_key_mp_delay_correct"
            android:title="@string/seDelayCorrect"
            android:summary="@string/seDelayCorrectInfo"
            android:defaultValue="0"
            android:entries="@array/deleyBeforeSwitch"
            android:entryValues="@array/deleyBeforeSwitchValues"
     	   />   
         <ListPreference
            android:key="pref_key_mp_delay_wrong"
            android:title="@string/seDelayInCorrect"
            android:summary="@string/seDelayInCorrectInfo"
            android:defaultValue="500"
            android:entries="@array/deleyBeforeSwitch"
            android:entryValues="@array/deleyBeforeSwitchValues"
     	   />
          <ListPreference
            android:key="pref_key_mp_time_remain_to_answer"
            android:title="@string/seTimeForAnswer"
            android:summary="@string/seTimeForAnswerInfo"
            android:defaultValue="2000"
            android:entries="@array/timeToAnswerAfterWrongAnswer"
            android:entryValues="@array/timeToAnswerAfterWrongAnswerValues"
     	   />
            <ListPreference
            android:key="pref_key_mp_number_of_test"
            android:title="@string/seNumberOfTests"
            android:defaultValue="10"
            android:summary="@string/seNumberOfTestsInfo"
            android:entries="@array/numberOfGamesInRound"
            android:entryValues="@array/numberOfGamesInRoundValue"
     	   />
	</PreferenceCategory>
    <PreferenceCategory 
        android:title="@string/aboutTitle">
             <ListPreference
          	    android:title="@string/aboutAuthor"
            	android:summary="Jo탑e Kulovic"
            	android:enabled="false"	
     	  	 /> 
     	  	   <ListPreference
          	    android:title="@string/aboutFeedback"
            	android:summary="made.by.jst@gmail.com"
            	android:enabled="false"	
     	  	 />   
     	  	 <ListPreference
          	    android:title="@string/aboutReason"
            	android:summary="@string/aboutReasonInfo"
            	android:enabled="false"	
     	  	 />   
     </PreferenceCategory>
